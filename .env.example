# =============================================================================
# .env.example
# =============================================================================
# Environment Configuration
ENVIRONMENT=development

# Application
APP_NAME=SketchDojo Backend
APP_VERSION=1.0.0
DEBUG=true
SECRET_KEY=your-secret-key-here

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Database
DATABASE_URL=mysql+asyncmy://user:password@localhost:3306/sketchdojo
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=50
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# AI Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
STABILITY_AI_API_KEY=your-stability-ai-api-key

# AI Configuration
DEFAULT_LLM_MODEL=gpt-4o-mini
DEFAULT_IMAGE_MODEL=stable-diffusion-xl-1024-v1-0
MAX_PANELS_PER_WEBTOON=20
MAX_CHARACTERS_PER_WEBTOON=10

# File Storage
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./storage
# S3_BUCKET_NAME=sketchdojo-storage
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-s3-access-key
# S3_SECRET_ACCESS_KEY=your-s3-secret-key

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# WebSocket
WEBSOCKET_PING_INTERVAL=10
WEBSOCKET_PING_TIMEOUT=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=INFO
LOG_FORMAT=json

# Task Processing
MAX_CONCURRENT_TASKS_PER_USER=3
TASK_TIMEOUT_SECONDS=600
CLEANUP_INTERVAL_HOURS=24